{{template "base/head" .}}
<div class="admin user">
	<div class="ui container">
		<div class="ui grid">
			{{template "admin/navbar" .}}
			<div class="twelve wide column content">
				{{template "base/alert" .}}
				<h4 class="ui top attached header">
					{{.i18n.Tr "admin.toolchains.tool_manage_panel"}} ({{.i18n.Tr "admin.toolchains.total" .Total}})
					<div class="ui right">
						<a class="ui black tiny button" href="{{AppSubURL}}/admin/toolchains/new">{{.i18n.Tr "admin.toolchains.new_tool"}}</a>
					</div>
				</h4>
				<div class="ui attached segment">
					{{template "admin/base/search" .}}
				</div>
				<div class="ui unstackable attached table segment">
					<table class="ui unstackable very basic striped table">
						<thead>
							<tr>
								<th>ID</th>
								<th>{{.i18n.Tr "admin.toolchains.name"}}</th>
								<th>{{.i18n.Tr "admin.toolchains.type"}}</th>
								<th>{{.i18n.Tr "admin.toolchains.host"}}</th>
								<th>{{.i18n.Tr "admin.toolchains.user"}}</th>
								<th>{{.i18n.Tr "admin.toolchains.password"}}</th>
								<th>{{.i18n.Tr "admin.toolchains.token"}}</th>
							</tr>
						</thead>
						<tbody>
							{{range .Tools}}
								<tr>
									<td>{{.ID}}</td>
									<td><a href="http://www.baidu.com">{{.Name}}</a></td>
									<td>{{.Type}}</td>
									<td>{{.Host}}</td>
									<td>{{.User}}</td>
									<td><span title="{{.Password}}">{{.Password}}</span></td>
									<td>{{.Token}}</td>
								</tr>
							{{end}}
						</tbody>
					</table>
				</div>

				{{template "admin/base/page" .}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
